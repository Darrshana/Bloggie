
<%- include("partials/header"); -%>

<div class="dir" >
<form class="form-inline">
  
   
  <div class="form-group mb-4 pb-4 pt-4">

    <input type="text" class="form-control" id="inputPassword2" placeholder="Post">
  </div>
  <button type="submit" class="btn bt mb-2 ml-4">Search</button>
</form>
</div>
<div>
<h2>HOME</h2>
    <p class="para"> <%= startingContent %> </p>


  <%  posts.forEach(function(post){ %>

    <h4><%=post.title%></h4>
    <p class="para"> 
    <%=post.content.substring(0, 100) + " ..."%>
    <a href="/posts/<%=post.title%>">Read More</a>
    </p>


    <% }) %>

  </div>
<%- include("partials/footer"); -%>
