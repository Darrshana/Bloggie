
<%- include("partials/header"); -%>

<div class="dir" >
<form class="form-inline" action="" method="POST"> 
  
   
  <div class="form-group mb-4 pb-4 pt-4">

    <input type="text" class="form-control" id="inputPassword2"  name="post" placeholder="Post">
  </div>
  <button type="submit" class="btn bt mb-2 ml-4">Search</button>
</form>
</div>
<div>
<h3>HOME</h3>
    <p class="para"> <%= startingContent %> </p>


  <%  posts.forEach(function(post){ %>

    <h5><%=post.title%></h5>
    <p class="para"> 
    <%=post.content.substring(0, 100) + " ..."%>
    <a href="/posts/<%=post.title%>">Read More</a>
    </p>


    <% }) %>

  </div>
<%- include("partials/footer"); -%>
